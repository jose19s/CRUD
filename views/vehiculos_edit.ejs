<% include partials/_header %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <!-- form code to edit and button -->
                    <form action="/update/<%= data.id%>" method="post">
                        <div class="form-group">
                            <input type="text" name="marca" value="<%= data.Marca%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="modelo" value="<%= data.modelo%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="placa" value="<%= data.Placa%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="año" value="<%= data.AAño%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="estado" value="<%= data.Estado%>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Edit Vehiculo
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer  %>